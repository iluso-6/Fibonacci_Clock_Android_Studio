<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="@dimen/widget_margin">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/widget_margin">

        <Button
            android:id="@+id/wfivesquare"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/wonesqaure"
            android:background="@drawable/border" />

        <Button
            android:id="@+id/wonesqaure"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/wtwosquare"
            android:background="@drawable/border" />

        <Button
            android:id="@+id/wotheronesquare"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/wonesqaure"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/border" />

        <Button
            android:id="@+id/wtwosquare"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/wotheronesquare"
            android:background="@drawable/border" />

        <Button
            android:id="@+id/wthreesquare"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/wtwosquare"
            android:layout_alignParentStart="true"
            android:background="@drawable/border" />
    </RelativeLayout>
</LinearLayout>